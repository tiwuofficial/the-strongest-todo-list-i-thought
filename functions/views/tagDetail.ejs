<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./common/meta') %>
    <%- include('./common/firebaseHeader') %>
    <%- include('./common/script') %>
    <script src="/web-components/list.js"></script>
    <script src="/web-components/section.js"></script>
    <script src="/web-components/todo-list-card.js"></script>
    <%- include('./common/style') %>
    <style>
      h1 + mbtl-list  {
        margin-top: 50px;
      }
    </style>
  </head>
  <body>
    <mbtl-header></mbtl-header>
    <mbtl-side-menu hidden></mbtl-side-menu>

    <mbtl-section>
      <h1>This Is <%= tag.id %> Todo List!</h1>

      <mbtl-list>
        <% for (var item of items) { %>
        <li>
          <mbtl-todo-list-card
            href="/todoLists/<%= item.id %>"
            src="<%= item.imageUrl %>"
            thumbnail-src="<%= item.thumbnailImageUrl %>"
            title="<%= item.title %>"
            tags="<%= item.escapeTags %>"
          >
          </mbtl-todo-list-card>
        </li>
        <% } %>
      </mbtl-list>
    </mbtl-section>
  </body>
</html>
