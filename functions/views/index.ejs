  <body>
    <mbtl-header></mbtl-header>

    <h1>This Is My Best Todo List!</h1>

    <mbtl-list>
      <% for (var item of items) { %>
      <li>
        <mbtl-todo-list-card
          href="/item/<%= item.id %>"
          src="<%= item.imageUrl %>"
          title="<%= item.title %>"
          tags="<%= item.escapeTags %>"
        >
        </mbtl-todo-list-card>
      </li>
      <% } %>
    </mbtl-list>

    <h2>Popular Tag!</h2>

    <mbtl-list>
      <% for (var tag of tags) { %>
      <li>
        <mbtl-tag
          href="/tags/<%= tag.id %>"
          tag="<%= tag.id %>"
          count="<%= tag.count %>"
        >
        </mbtl-tag>
      </li>
      <% } %>
    </mbtl-list>

